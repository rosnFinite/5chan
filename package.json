{
  "name": "5chan",
  "version": "1.0.0",
  "description": "",
  "main": "./src/js/server.js",
  "scripts": {
    "build": "npm run lint &&browserify ./src/js/articles.js | squash > ./build/bundle.js && npm run build:less",
    "build:less": "./node_modules/.bin/lessc --clean-css ./src/styles/style.less ./build/style.min.css",
    "debug": "npm run lint &&browserify ./src/js/articles.js -o ./build/bundle.js && lessc ./src/styles/style.less ./build/style.css",
    "start": "node ./src/js/server.js",
    "startDev": "nodemon ./src/js/server.js",
    "lint": "semistandard",
    "clean": "node -e \"require('fs').rmdirSync('./build', { recursive: true })\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rosnFinite/5chan.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/rosnFinite/5chan/issues"
  },
  "homepage": "https://github.com/rosnFinite/5chan#readme",
  "dependencies": {
    "browserify": "^16.5.1",
    "butternut": "^0.4.6",
    "express": "^4.17.1",
    "less": "^3.11.1",
    "less-plugin-clean-css": "^1.5.1",
    "purecss": "^2.0.3",
    "semistandard": "^14.2.0"
  },
  "devDependencies": {
    "nodemon": "^2.0.4"
  }
}
